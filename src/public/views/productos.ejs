<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos</title>
    <link rel="stylesheet" href="https://bootswatch.com/5/flatly/bootstrap.min.css">
    <link rel="stylesheet" href="../css/main.css">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('../partials/navbar'); %>
    <div id="container">
        <% if(productos) {%>
           <% productos.forEach(e => {%>
            <div class="card bg-primary text-white mb-3" style="max-width: 20rem;">
                <div class="card-header"><%= e.genero.toUpperCase() %></div>
                <div class="card-body">
                    <img  class="imgCards" src="<%= e.imagen %>"></img>
                    <h4 class="card-title"><%= e.nombre %></h4>
                    <h5 class="card-title"><%= e.autor %></h5>
                    <h5 class="card-title">$ <%= e.precio %></h5>
                    <p hidden><%= e._id%></p>
                    <p hidden><%= e.stock%></p>
                    <div class="containerBtns mb-3" id="container<%=e._id%>">
                        <button type="button" class="btnLess btn btn-success me-2">-</button>
                        <span><%= e.stock%></span>
                        <button type="button" class="btnAdd btn btn-success ms-2">+</button>
                    </div>
                    <button type="button" class="btn btn-success btnAddToCart">AGREGAR</button>
                </div>
            </div>
            <% }) %>
        <% } %>
    </div>
<script src="../js/main.js"></script>
</body>
</html>